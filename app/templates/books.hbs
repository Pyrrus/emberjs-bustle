<div class="row">
  {{#each model as |story|}}
    <div class="row spacing">
      <div class="col-md-12">
        <div class="col-md-5">
          {{#link-to 'articles' story.id}}<img {{action 'close'}} class="x-img" src="{{story.image}}" />{{/link-to}}
        </div>
        <div class="col-md-6">
          <div class="panel panel-default">
            {{#link-to 'articles' story.id}}<div class="panel-heading" {{action 'close'}}>{{story.headline}}</div>{{/link-to}}
            <div class="panel-body">{{{story.content}}}</div>
            <div class="panel-footer">By {{story.author}}</div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
</div>
